<div class="dashboard-header">
  <h3>Sign up</h3>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.text_field :first_name, placeholder: "First name", autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="form-group">
    <%= f.text_field :last_name, placeholder: "Last name", autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder: "Password",autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "new-password" %>
  </div>

  <div class="form-group button">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
